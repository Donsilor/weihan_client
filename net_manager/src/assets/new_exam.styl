.popup

  ul
    width 100%

    li
      font-size 1.25rem
      line-height 2rem
      width 100%
      margin-bottom .5rem

    div
      display inline-block
      vertical-align middle

      &.time_quantum input
        width 45% !important

      &.time_quantum span
        width 10%
        height 1.625rem
        line-height 1.625rem
        text-align center

      &:first-child
        width 26%
        height 100%
        /*font-size .875rem*/
        text-align right
        line-height 1.875rem

      &:last-child
        width 73%
        height 100%
        /*font-size 1.625rem*/
        color #999

        input
          width 100%
          height 2rem
          /*margin-top .25rem*/
          border 1px solid $inputBorderColor
          padding 0 .5rem

          &.width
            width 86%
            height 2rem
            margin-right 3%

        select
          width 100%
          height 2rem
          border-color $inputBorderColor
          padding 0 .5rem
$borderColor = #dcdcdc

ellipsis()
  overflow hidden
  white-space nowrap
  text-overflow ellipsis

cleaerfix()
  content ''
  display table
  clear: both

$iconfontColor = #34a6dd

$inputBorderColor = #b5b5b5

.maskLayer
  position fixed
  top 0
  right 0
  bottom 0
  left 0
  background-color rgba(0,0,0,.7)
  z-index 999

.centerLayer
  position fixed
  top 50%
  left 50%
  transform translate(-50%, -50%)
  width 50rem

  .popup
    background-color #fff

    .popupTopBar
      font-size 1.5rem
      line-height 4.125rem
      color #fff
      background-color #34a5dd
      padding 0 2.25rem
      ellipsis()

      &:after
        content ''
        display table
        clear both

      .iconfont
        cursor pointer

    .popupWrap
      padding 1.875rem 2.625rem

    .btns
      margin-top 2.5rem
      text-align right

      &:after
        cleaerfix()

      a
        display inline-block
        font-size 1.125rem
        line-height  2.625rem
        padding 0 1.5rem
        color #fff
        background-color #34a5dd
        border 1px solid #34a5dd
        border-radius .3rem

        &.cancel
          background-color #fff
          color #34a5dd
          border-color #34a5dd

        &:not(:first-child)
          margin-left 2.5rem

i.el-icon-star-on
  color #f00
  font-size 10px
  height 100%
  vertical-align top
  line-height 28px
